/* Write your global styles here, in PostCSS syntax */
@import './variables.postcss';
@import './cards.postcss';
@import './app.postcss';

@tailwind base;
@tailwind components;
@tailwind utilities;

.paragraph-text {
	color: $primaryColor;

	&:hover {
		color: $hoverPrimaryColor;
		cursor: pointer;
	}
}

.users-list {
	display: flex;
	flex-flow: row wrap;
	justify-content: center;
	align-items: center;
	gap: 10px;
}

.user-card {
	flex: 0 1 30%;

	&:hover {
		cursor: pointer;
	}
}
